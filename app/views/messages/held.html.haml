- page_title << @server.name
- page_title << "Messages"
- page_title << "Held"
= render 'servers/sidebar', :active_server => @server
= render 'servers/header', :active_nav => :messages
= render 'header', :active_nav => :held
- if @messages.empty? && !@queried
  .pageContent--compact
    .noData.noData--clean
      %h2.noData__title You haven't got any held messages.
      %p.noData__text
        You haven't sent any messages through this mail server yet. Not to worry though
        they'll start appearing here as soon as you start sending them.
- else
  .pageContent--compact
    %p.pageContent__intro.u-margin
      = link_to "Cancel and Release All Held Messages", purge_held_messages_organization_server_messages_path(organization, @server), class: "button button--small button--danger", method: :delete, data: { confirm: "Are you sure you want to cancel and release ALL held messages? This action cannot be undone." }
  = render 'index'

